<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card_elemental"
    android:layout_marginHorizontal="8dp"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/darkBlue"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/elemental"
        android:layout_width="140dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/elemental2"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/title_elemental"
        style="@style/title_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Elemental"
        android:maxLines="1"
        android:ellipsize="end"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/rate_elemental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.9"
            style="@style/text"
            android:textColor="@color/yellow"/>
        <ImageView
            android:paddingHorizontal="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_24"/>
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>